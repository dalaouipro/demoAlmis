<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : createEstatico.xml
    Description: Create Estatico dialog
-->
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://aweframework.gitlab.io/awe/docs/schemas/screen.xsd" template="window">
    <tag source="modal">
        <dialog id="CreateEstaticoDialog" label="Crear Estatico" icon="info-circle">
            <tag type="div" style="modal-body scrollable">
                <criteria placeholder="Entidad" component="text"  id="createEstaticoEntidad" label="Entidad"/>
                <criteria placeholder="Descripcion" component="text" id="createEstaticoDescripcion" label="Descripcion"/>
                <criteria placeholder="Tipo de entidad" component="select" initial-load="enum" target-action="tipoEntidad" id="createEstaticoTipoEntidad" label="Tipo de entidad"/>
                <criteria placeholder="Numero de registro" component="text"  id="createEstaticoNumeroRegistro" label="Numero de registro"/>
                <criteria placeholder="Nif" component="text"  id="createEstaticoNif" label="Nif"/>
            </tag>
            <tag type="div" style="modal-footer">
                <tag type="div" style="pull-right">
                    <button label="Annular" icon="close" id="ButCreateEstaticoCancel">
                        <button-action type="close" target="CreateEstaticoDialog"/>
                    </button>
                    <button label="Acceptar" icon="check" id="ButCreateEstaticoOk" button-type="submit">
                        <button-action type="server" server-action="maintain" target-action="maintainCreateEstatico"/>
                        <button-action type="filter" target="gridSimpleEstatico"/>
                        <button-action type="reset" target="CreateEstaticoDialog"/>
                        <button-action type="close" target="CreateEstaticoDialog"/>
                    </button>
                </tag>
            </tag>
        </dialog>
    </tag>
</screen>