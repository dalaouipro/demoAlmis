<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : test.xml
    Description: Test screen
-->

<screen
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://aweframework.gitlab.io/awe/docs/schemas/screen.xsd"
        template="window"
>
    <tag source="buttons">
        <button id="imprmimir" label="Imprimir" icon="print">
            <button-action type="dialog" target="PrnOpt"/>
        </button>
        <button id="ButConfirmar" label="Confirmar" icon="check-square">
            <button-action type="server" server-action="maintain" target-action="maintainMultipleEstatico"/>
            <button-action type="filter" target="gridEditableEstatico"/>
            <dependency target-type="show" initial="true">
                <dependency-element id="tabEstatico" condition="eq" value="Editable" />
            </dependency>
        </button>
        <button id="borrar" label="Borrar" icon="trash">
            <button-action type="server" server-action="maintain" target-action="maintainDeleteEstatico"/>
            <button-action type="filter" target="gridSimpleEstatico"/>
            <dependency target-type="show" initial="true">
                <dependency-element id="tabEstatico" condition="eq" value="Simple" />
            </dependency>
            <dependency initial="true" target-type="enable" >
                <dependency-element id="gridSimpleEstatico" condition="eq" attribute="selectedRows" value="1"/>
            </dependency>
        </button>
        <button id="modificar" label="Modificar" icon="edit">
            <button-action type="server" server-action="update-model" target-action="updateEstatico"/>
            <button-action type="dialog" target="updateEstaticoDia"/>
            <dependency target-type="show" initial="true">
                <dependency-element id="tabEstatico" condition="eq" value="Simple" />
            </dependency>
            <dependency initial="true" target-type="enable" >
                <dependency-element id="gridSimpleEstatico" condition="eq" attribute="selectedRows" value="1"/>
            </dependency>
        </button>
        <button id="nuevo" label="Nuevo" icon="plus-square">
            <dependency target-type="show" initial="true">
                <dependency-element id="tabEstatico" condition="eq" value="Simple" />
            </dependency>
            <button-action type="dialog" target="CreateEstaticoDialog"/>
        </button>
    </tag>
    <tag source="center" expandible="vertical">
        <tag type="div" style="panel-body static">
            <criteria component="suggest" id="selectTypoEntidad" label="Typo entidad" initial-load="query" target-action="queryTipoEntidad" optional="true" style="col-xs-6 col-sm-3 col-lg-2" />
            <criteria component="suggest-multiple" id="suggestEntidad" label="Entidad" initial-load="query" target-action="queryEntidad" style="col-sm-6 col-md-6 col-lg-3"/>
            <criteria component="checkbox" id="checkboxActivo" label="Activo" value="1" style="col-xs-1 col-sm-1 col-lg-2"/>
        </tag>
        <tag type="div" style="panel-footer">
            <tag type="div" style="pull-right">

                <button id="ButReset" type="button" label="reiniciar" icon="refresh" >
                    <button-action type="restore" target="selectTypoEntidad" />
                    <button-action type="restore" target="suggestEntidad" />
                </button>
                <button id="ButSubmit" type="submit" label="buscar" icon="search" >
                    <button-action type="filter" target="gridSimpleEstatico" />
                </button>
            </tag>
        </tag>
        <tab id="tabEstatico" initial-load="enum" target-action="tabEstatico">
            <tabcontainer id="Simple">
                <grid id="gridSimpleEstatico" server-action="data" initial-load="query" target-action="queryGridSimpleEstatico" style="expand">
                    <column name="colEstSId" label="Id" hidden="false"/>
                    <column name="colEstSEntidad" label="Entidad"/>
                    <column name="colEstSDescripcion" label="Descripcion"/>
                    <column name="colEstSTipoEntidad" label="Tipo Entidad"/>
                    <column name="colEstSNumeroRegistro" label="numero Registro"/>
                    <column name="colEstSNif" label="Nif"/>
                </grid>
            </tabcontainer>
            <tabcontainer id="Editable">
                <grid
                        id="gridEditableEstatico" server-action="data" initial-load="query" target-action="queryGridEditableEstatico"
                        style="expand" editable="true" send-operations="true" send-all="true">
                    <column name="colEstEId" label="Id" component="text" hidden="false"/>
                    <column name="colEstEEntidad" component="text" label="Entidad"/>
                    <column name="colEstEDescripcion" label="Descripcion" component="text"/>
                    <column name="colEstETipoEntidad" label="Tipo Entidad" component="select" initial-load="enum" target-action="tipoEntidad"/>
                    <column name="colEstENumeroRegistro" label="numero Registro" component="text"/>
                    <column name="colEstENif" label="Nif" component="text"/>

                    <button id="BtnAddGrdOreStaCfg" label="BUTTON_NEW" icon="plus-circle">
                        <button-action type="add-row" target="gridEditableEstatico" silent="true"/>
                    </button>
                    <button id="BtnDelGrdOreStaCfg" label="BUTTON_DELETE" icon="trash">
                        <button-action type="delete-row" target="gridEditableEstatico" silent="true"/>
                        <dependency target-type="enable" initial="true">
                            <dependency-element id="gridEditableEstatico" attribute="selectedRows" condition="ge" value="1" />
                        </dependency>
                    </button>
                </grid>
            </tabcontainer>
        </tab>
        <include target-screen="createEstatico" target-source="modal"/>
        <include target-screen="updateEstatico" target-source="modal"/>
        <include target-screen="PrnOpt" target-source="center"/>
    </tag>
</screen>